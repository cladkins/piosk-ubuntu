[Unit]
Description=Launch PiOSK switcher to switch tabs on Ubuntu
After=piosk-runner.service
Wants=graphical-session.target

[Service]
Type=simple
ExecStart=/opt/piosk/scripts/switcher.sh
User=PI_USER
WorkingDirectory=PI_HOME
Environment=DISPLAY=:0
Environment=XAUTHORITY=PI_HOME/.Xauthority
Environment=XDG_RUNTIME_DIR=/run/user/PI_SUID
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/PI_SUID/bus
Restart=on-failure
RestartSec=5

[Install]
WantedBy=graphical.target 