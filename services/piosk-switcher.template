[Unit]
Description=Launch PiOSK switcher to switch tabs on Ubuntu
After=piosk-runner.service display-manager.service
Wants=display-manager.service

[Service]
Type=simple
ExecStartPre=/usr/bin/sleep 30
ExecStart=/opt/piosk/scripts/switcher.sh
User=USER_PLACEHOLDER
Group=USER_PLACEHOLDER
WorkingDirectory=/home/USER_PLACEHOLDER
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/USER_PLACEHOLDER/.Xauthority
Environment=XDG_RUNTIME_DIR=/run/user/USER_SUID
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/USER_SUID/bus
Environment=WAYLAND_DISPLAY=
Restart=on-failure
RestartSec=5

[Install]
WantedBy=graphical.target 